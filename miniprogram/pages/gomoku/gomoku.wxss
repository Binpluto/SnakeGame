/* gomoku.wxss */
.game-container {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: linear-gradient(135deg, #8B4513 0%, #D2691E 100%);
  padding: 20rpx;
  box-sizing: border-box;
}

.game-header {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 15rpx;
  margin-bottom: 20rpx;
  backdrop-filter: blur(10rpx);
}

.back-btn {
  padding: 10rpx 20rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
  color: white;
  font-size: 28rpx;
}

.game-title {
  color: white;
  font-size: 36rpx;
  font-weight: bold;
}

.score {
  color: white;
  font-size: 28rpx;
  font-weight: bold;
}

.game-info {
  margin-bottom: 20rpx;
}

.status {
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  text-shadow: 0 2rpx 5rpx rgba(0, 0, 0, 0.3);
}

.game-canvas {
  width: 600rpx;
  height: 600rpx;
  background: #DEB887;
  border-radius: 10rpx;
  margin: 20rpx 0;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.3);
  border: 4rpx solid #8B4513;
}

.game-controls {
  display: flex;
  gap: 20rpx;
  margin: 30rpx 0;
  flex-wrap: wrap;
  justify-content: center;
}

.control-btn {
  padding: 20rpx 40rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 25rpx;
  color: #333;
  font-size: 28rpx;
  font-weight: bold;
  box-shadow: 0 5rpx 15rpx rgba(0, 0, 0, 0.2);
  transition: all 0.2s ease;
  min-width: 120rpx;
  text-align: center;
}

.control-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 3rpx 10rpx rgba(0, 0, 0, 0.2);
}

/* 响应式设计 */
@media (max-width: 400px) {
  .game-canvas {
    width: 500rpx;
    height: 500rpx;
  }
  
  .control-btn {
    padding: 15rpx 30rpx;
    font-size: 26rpx;
    min-width: 100rpx;
  }
}